<Window x:Class="Cursep.Views.AddMaterialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление материала" Height="538" Width="699"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Добавление нового материала" 
                          FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Название материала:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtMaterialName" Height="30" Padding="5"/>

                <TextBlock Text="Описание:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBox x:Name="txtDescription" Height="60" Padding="5" TextWrapping="Wrap" AcceptsReturn="True"/>

                <TextBlock Text="Категория:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <ComboBox x:Name="cmbCategories" Height="30" DisplayMemberPath="CategoryName"/>

                <TextBlock Text="Поставщик:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <ComboBox x:Name="cmbSuppliers" Height="30" DisplayMemberPath="SupplierName"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="Цена за единицу:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <TextBox x:Name="txtUnitPrice" Height="30" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="Единица измерения:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <TextBox x:Name="txtUnitOfMeasure" Height="30" Padding="5" Text="шт"/>
                    </StackPanel>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="Мин. запас:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <TextBox x:Name="txtMinStockLevel" Height="30" Padding="5" Text="0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="Макс. запас:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <TextBox x:Name="txtMaxStockLevel" Height="30" Padding="5" Text="100"/>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="btnCancel" Content="Отмена" Width="80" Height="35" 
                            Margin="0,0,10,0" Click="BtnCancel_Click"/>
                    <Button x:Name="btnSave" Content="Сохранить" Width="80" Height="35" 
                            Background="#27ae60" Foreground="White" Click="BtnSave_Click"/>
                </StackPanel>

                <TextBlock x:Name="txtError" Foreground="Red" Margin="0,10,0,0" 
                          TextWrapping="Wrap" Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>