<Window x:Class="Cursep.Views.AddSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление поставщика" Height="503" Width="713"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Добавление нового поставщика" 
                      FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Название компании:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtSupplierName" Height="30" Padding="5"/>

            <TextBlock Text="Контактное лицо:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtContactPerson" Height="30" Padding="5"/>

            <TextBlock Text="Телефон:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtPhone" Height="30" Padding="5"/>

            <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtEmail" Height="30" Padding="5"/>

            <TextBlock Text="Адрес:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtAddress" Height="60" Padding="5" TextWrapping="Wrap" AcceptsReturn="True"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="btnCancel" Content="Отмена" Width="80" Height="35" 
                        Margin="0,0,10,0" Click="BtnCancel_Click"/>
                <Button x:Name="btnSave" Content="Сохранить" Width="80" Height="35" 
                        Background="#27ae60" Foreground="White" Click="BtnSave_Click"/>
            </StackPanel>

            <TextBlock x:Name="txtError" Foreground="Red" Margin="0,10,0,0" 
                      TextWrapping="Wrap" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>