<Window x:Class="Cursep.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация нового пользователя" 
        Height="589" Width="477"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Регистрация нового пользователя" 
                      FontSize="16" FontWeight="Bold" Margin="0,0,0,20"
                      HorizontalAlignment="Center"/>

            <TextBlock Text="Логин:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Height="30" Padding="5"/>

            <TextBlock Text="Пароль:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="30" Padding="5"/>

            <TextBlock Text="Подтверждение пароля:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtConfirmPassword" Height="30" Padding="5"/>

            <TextBlock Text="ФИО:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtFullName" Height="30" Padding="5"/>

            <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtEmail" Height="30" Padding="5"/>

            <TextBlock Text="Телефон:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtPhone" Height="30" Padding="5"/>

            <TextBlock Text="Роль:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <ComboBox x:Name="cmbRoles" Height="30" DisplayMemberPath="RoleName"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="btnCancel" Content="Отмена" Width="80" Height="35" 
                        Margin="0,0,10,0" Click="BtnCancel_Click"/>
                <Button x:Name="btnRegister" Content="Зарегистрировать" Width="120" Height="35" 
                        Background="#27ae60" Foreground="White" Click="BtnRegister_Click"/>
            </StackPanel>

            <TextBlock x:Name="txtError" Foreground="Red" Margin="0,10,0,0" 
                      TextWrapping="Wrap" Visibility="Collapsed"/>

            <TextBlock x:Name="txtSuccess" Foreground="#27ae60" Margin="0,10,0,0" 
                      TextWrapping="Wrap" Visibility="Collapsed"
                      Text="Регистрация успешна! Теперь вы можете войти в систему."/>
        </StackPanel>
    </Grid>
</Window>